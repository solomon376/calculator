<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" stylesheets="@css/calculator.css"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1"
      fx:controller="com.example.calculator.CalculatorController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Display -->
    <TextField fx:id="display" alignment="CENTER_RIGHT" editable="false" prefHeight="50" styleClass="display" />

    <!-- Buttons Grid -->
    <GridPane hgap="10" vgap="10">
        <Button onAction="#handleNumber" text="7" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button onAction="#handleNumber" text="8" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button onAction="#handleNumber" text="9" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <Button onAction="#handleOperator" styleClass="operator" text="รท" GridPane.columnIndex="3" GridPane.rowIndex="0" />

        <Button onAction="#handleNumber" text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button onAction="#handleNumber" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button onAction="#handleNumber" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Button onAction="#handleOperator" styleClass="operator" text="ร" GridPane.columnIndex="3" GridPane.rowIndex="1" />

        <Button onAction="#handleNumber" text="1" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button onAction="#handleNumber" text="2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button onAction="#handleNumber" text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <Button onAction="#handleOperator" styleClass="operator" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />

        <Button onAction="#handleNumber" text="0" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Button onAction="#handleNumber" text="." GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button onAction="#handleEquals" styleClass="equals" text="=" GridPane.columnIndex="2" GridPane.rowIndex="3" />
        <Button onAction="#handleOperator" styleClass="operator" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</VBox>
